# Build-time environment (no database connectivity required)
# This file is used during Docker build to avoid database connection issues

# Disable database operations during build
SKIP_DB_OPERATIONS=true

# Minimal required variables for Next.js build
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://www.workout.cool

# Auth placeholders (not used during build)
BETTER_AUTH_URL=https://www.workout.cool
BETTER_AUTH_SECRET=build-time-placeholder

# Database placeholder (not used during build)
DATABASE_URL=postgresql://placeholder:placeholder@localhost:5432/placeholder

# Optional placeholders
GOOGLE_CLIENT_ID=placeholder
GOOGLE_CLIENT_SECRET=placeholder
OPENPANEL_SECRET_KEY=placeholder
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=placeholder
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=placeholder
SMTP_PASS=placeholder
SMTP_FROM="Workout Cool <noreply@workout.cool>"
SMTP_SECURE=false
SEED_SAMPLE_DATA=false
DEFAULT_BILLING_MODE=DISABLED

# RevenueCat (required for build)
REVENUECAT_SECRET_KEY=build-placeholder
REVENUECAT_API_KEY=build-placeholder
REVENUECAT_WEBHOOK_SECRET=build-placeholder

# Stripe (required for build)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder

# Stripe Price IDs (placeholders)
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_EU=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_EU=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_US=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_US=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_LATAM=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_LATAM=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_BR=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_BR=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_RU=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_RU=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY_CN=price_placeholder
NEXT_PUBLIC_STRIPE_PRICE_YEARLY_CN=price_placeholder
